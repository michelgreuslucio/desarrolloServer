<!DOCTYPE html>
<html>
    <head>

      <meta charset="UTF-8" />
      <title>{% block title %}Producto{{numero}}{% endblock %}</title>
      {% block stylesheets %}
      <link rel="stylesheet" type="text/css" href="{{asset('css/estilo.css')}}">
      {% endblock %}

    </head>
    <body>

        {% block body %}

        {% if numero==1 %}
          <h1>Productos a elegir nº {{numero}}</h1><br>
          <img src="{{asset('img/arsenal.jpg')}}"><br><br>

        {% elseif numero==2 %}

          <h2>Productos a elegir nº {{numero}}</h2><br>
          <img src="{{asset('img/chelsea.jpg')}}"><br><br>

        {% endif %}

          <a class="boton" href="/index">Volver</a>

        {% endblock %}

    </body>
</html>
